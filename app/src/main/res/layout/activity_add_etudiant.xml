<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.projetws.addEtudiant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"> <!-- Reduced padding for better layout -->

        <TextView
            android:id="@+id/title"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:gravity="center_horizontal"
            android:text="Ajouter un nouveau étudiant"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nom : "
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/nom"
            style="@style/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_box"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:hint="Votre nom"
            android:textColorHint="@color/blueGray"/>

        <TextView
            android:id="@+id/textView2"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Prénom :"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/prenom"
            style="@style/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_box"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:hint="Votre prenom"
            android:textColorHint="@color/blueGray"/>

        <TextView
            android:id="@+id/textView3"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Ville :"
            android:textColor="@color/black"/>

        <Spinner
            android:id="@+id/ville"
            style="@style/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_box"
            android:padding="10dp"
            android:entries="@array/villes" />

        <TextView
            android:id="@+id/textView4"
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Sexe :"
            android:textColor="@color/black"/>

        <RadioGroup
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Feminin" />
            <RadioButton
                android:id="@+id/m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Masculin" />
        </RadioGroup>

        <Button
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/background_dark"
            android:background="@color/babyBlue"
            android:text="Ajouter" />

        <!-- Button for viewing the student list -->
        <Button
            android:id="@+id/view_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/background_dark"
            android:background="@color/babyBlue"
            android:text="Voir la liste des etudiants" />
    </LinearLayout>
</ScrollView>